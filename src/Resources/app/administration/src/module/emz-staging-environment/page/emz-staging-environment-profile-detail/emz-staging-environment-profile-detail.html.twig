{% block emz_staging_environment_profile_detail %}
    <sw-page class="emz-staging-environment-profile-detail">
        <template slot="smart-bar-actions">
            <sw-button
                :routerLink="{ name: 'emz.staging.environment.profile_index' }"
            >
                {{ $t('emz-staging-environment.detail.cancelButtonText') }}
            </sw-button>
            <sw-button-process
                variant="primary"
                @click="onClickSave"
                :isLoading="isLoading"
                :processSuccess="processSuccess"
                @process-finish="saveFinish"
            >
                {{ $t('emz-staging-environment.detail.saveButtonText') }}
            </sw-button-process>
        </template>
        <template slot="content">
            <sw-card-view>
                <sw-card
                    v-if="profile"
                    :isLoading="isLoading"
                    :title="$t('emz-staging-environment.detail.profileCardTitle')"
                >
                    <sw-container columns="1fr 1fr" gap="32px">
                        <sw-text-field
                            :label="$t('emz-staging-environment.detail.profileNameLabel')"
                            :placeholder="$t('emz-staging-environment.detail.profileNameLabel')"
                            v-model="profile.profileName"
                            validation="required"
                        >
                        </sw-text-field>

                        <sw-text-field
                            :label="$t('emz-staging-environment.detail.folderNameLabel')"
                            :placeholder="$t('emz-staging-environment.detail.folderNameLabel')"
                            v-model="profile.folderName"
                            validation="required"
                        >
                        </sw-text-field>
                    </sw-container>

                    <sw-text-field
                        :label="$t('emz-staging-environment.detail.excludedFoldersLabel')"
                        :placeholder="$t('emz-staging-environment.detail.excludedFoldersLabel')"
                        v-model="profile.excludedFolders"
                    >
                    </sw-text-field>

                    <sw-textarea-field
                        :label="$t('emz-staging-environment.detail.commentLabel')"
                        :placeholder="$t('emz-staging-environment.detail.commentLabel')"
                        v-model="profile.comment"
                    >
                    </sw-textarea-field>
                </sw-card>

                <sw-card
                    v-if="profile"
                    :isLoading="isLoading"
                    :title="$t('emz-staging-environment.detail.databaseCardTitle')"
                >
                    <sw-text-field
                        :label="$t('emz-staging-environment.detail.databaseHostLabel')"
                        :placeholder="$t('emz-staging-environment.detail.databaseHostLabel')"
                        v-model="profile.databaseHost"
                        validation="required"
                    >
                    </sw-text-field>

                    <sw-text-field
                        :label="$t('emz-staging-environment.detail.databaseUserLabel')"
                        :placeholder="$t('emz-staging-environment.detail.databaseUserLabel')"
                        v-model="profile.databaseUser"
                        validation="required"
                    >
                    </sw-text-field>

                    <sw-text-field
                        :label="$t('emz-staging-environment.detail.databaseNameLabel')"
                        :placeholder="$t('emz-staging-environment.detail.databaseNameLabel')"
                        v-model="profile.databaseName"
                        validation="required"
                    >
                    </sw-text-field>

                    <sw-password-field
                        :label="$t('emz-staging-environment.detail.databasePasswordLabel')"
                        :placeholder="$t('emz-staging-environment.detail.databasePasswordLabel')"
                        v-model="profile.databasePassword"
                        validation="required"
                    >
                    </sw-password-field>

                    <sw-text-field
                        :label="$t('emz-staging-environment.detail.databasePortLabel')"
                        :placeholder="$t('emz-staging-environment.detail.databasePortLabel')"
                        v-model="profile.databasePort"
                        validation="required"
                    >
                    </sw-text-field>
                </sw-card>

                <sw-card
                    v-if="profile"
                    :isLoading="isLoading"
                    :title="$t('emz-staging-environment.detail.settingsCardTitle')"
                >
                    <sw-checkbox-field
                        :label="$t('emz-staging-environment.detail.anonymizeDataLabel')"
                        v-model="profile.anonymizeData"
                    >
                    </sw-checkbox-field>

                    <sw-checkbox-field
                        :label="$t('emz-staging-environment.detail.deactivateScheduledTasksLabel')"
                        v-model="profile.deactivateScheduledTasks"
                    >
                    </sw-checkbox-field>

                    <sw-checkbox-field
                        :label="$t('emz-staging-environment.detail.setInMaintenanceLabel')"
                        v-model="profile.setInMaintenance"
                    >
                    </sw-checkbox-field>

                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}